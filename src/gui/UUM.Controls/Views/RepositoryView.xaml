<catel:UserControl x:Class="UUM.Controls.Views.RepositoryView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:catel="http://catel.codeplex.com" xmlns:views="clr-namespace:UUM.Controls.Views">
    <catel:StackGrid>
        <catel:StackGrid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </catel:StackGrid.ColumnDefinitions>
        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </catel:StackGrid.RowDefinitions>
        
        <Button Command="{Binding AddParameter}">Add</Button>
        <Button Command="{Binding RemoveParameter}">Remove</Button>
        <catel:EmptyColumn/>

        <ListView Grid.ColumnSpan="3" ItemsSource="{Binding Parameters}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <views:RepositorySettingsControl DataContext="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </catel:StackGrid>
</catel:UserControl>
